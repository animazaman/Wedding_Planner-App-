<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <TextView-->
    <!--        android:id="@+id/text_home"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="8dp"-->
    <!--        android:layout_marginTop="8dp"-->
    <!--        android:layout_marginEnd="8dp"-->
    <!--        android:textAlignment="center"-->
    <!--        android:textSize="20sp"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp">


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="-20dp"
                android:paddingTop="10sp"
                app:auto_cycle="true"
                app:delay="0"

                app:period="1000"

                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp"></Space>


            <Button
                android:id="@+id/holud"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/slider"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="Holud"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:textSize="17sp"
                />
            <Button
                android:id="@+id/mehendi_sangeet"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/holud"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="Mehedi &amp; Sangeet"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:textSize="17sp"
                />

            <Button
                android:id="@+id/bridal_shower"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/mehendi_sangeet"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="Bridal Shower"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:textSize="17sp"


                />

            <Button
                android:id="@+id/akdh"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/bridal_shower"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="Akdh"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:textSize="17sp"

                />

            <Button
                android:id="@+id/wedding"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/akdh"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="Wedding"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:textSize="17sp"
            />

            <Button
                android:id="@+id/reception"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/wedding"
                android:layout_margin="5dp"
                android:padding="15dp"
                android:text="Reception"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:textSize="17sp"
                />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>